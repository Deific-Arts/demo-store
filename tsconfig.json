{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "incremental": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "store/build"
  },
  "include": ["./store/src/**/*.ts", "./store/src/**/*.tsx"],
  "exclude": ["node_modules"]
}
